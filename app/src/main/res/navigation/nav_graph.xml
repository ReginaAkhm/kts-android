<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/helloFragment">

    <fragment
        android:id="@+id/logFragment"
        android:name="com.kts_android.strava.LogFragment"
        android:label="LogFragment"
        tools:layout="@layout/fragment_log">
        <action
            android:id="@+id/action_logFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/helloFragment"
        android:name="com.kts_android.strava.HelloFragment"
        android:label="fragment_hello"
        tools:layout="@layout/fragment_hello" >
        <action
            android:id="@+id/action_helloFragment_to_logFragment"
            app:destination="@id/logFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.kts_android.strava.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
</navigation>